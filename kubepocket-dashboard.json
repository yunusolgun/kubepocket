      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value"]
        }
      }
