{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "title": "KubePocket",
  "uid": "kubepocket-main",
  "schemaVersion": 36,
  "version": 6,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "namespace",
        "label": "Namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(kubepocket_namespace_cpu_cores, exported_namespace)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "refresh": 2,
        "sort": 1
      },
      {
        "name": "topk",
        "label": "Top N Pod",
        "type": "custom",
        "query": "5,10,20,50",
        "current": { "selected": true, "text": "10", "value": "10" },
        "includeAll": false
      }
    ]
  },
  "panels": [
    {
      "id": 100,
      "title": "üåê NAMESPACE BAZLI",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 0 },
      "options": {
        "content": "## Namespace Bazlƒ± Metrikler ‚Äî Filtre: **$namespace**",
        "mode": "markdown"
      }
    },
    {
      "id": 1,
      "title": "Namespace CPU Usage (cores)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 2 },
      "targets": [
        {
          "expr": "kubepocket_namespace_cpu_cores{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 2,
      "title": "Namespace Memory Usage (GiB)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 2 },
      "targets": [
        {
          "expr": "kubepocket_namespace_memory_gib{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 3,
      "title": "Namespace Restarts",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "kubepocket_namespace_restarts_total{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 4,
      "title": "Namespace Anomaly Score (0-100)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "targets": [
        {
          "expr": "kubepocket_anomaly_score{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      }
    },
    {
      "id": 200,
      "title": "üö® POD ANOMALY ‚Äî EN KRƒ∞Tƒ∞K PODLAR",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 18 },
      "options": {
        "content": "## En Kritik Pod'lar ‚Äî Top $topk (Anomaly Skoruna G√∂re)",
        "mode": "markdown"
      }
    },
    {
      "id": 30,
      "title": "Top $topk ‚Äî Pod Anomaly Score",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 12, "w": 8, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_anomaly_score{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}} / {{exported_namespace}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showUnfilled": true
      }
    },
    {
      "id": 31,
      "title": "Top $topk ‚Äî Restart Anomaly",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 12, "w": 8, "x": 8, "y": 20 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_restart_anomaly{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showUnfilled": true
      }
    },
    {
      "id": 32,
      "title": "Top $topk ‚Äî CPU Anomaly",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 12, "w": 8, "x": 16, "y": 20 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_cpu_anomaly{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showUnfilled": true
      }
    },
    {
      "id": 33,
      "title": "Top $topk Pod Anomaly ‚Äî Zaman Serisi",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_anomaly_score{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}} ({{exported_namespace}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 300,
      "title": "üê≥ POD DETAY",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 40 },
      "options": {
        "content": "## Pod Detay ‚Äî Top $topk (CPU + Memory)",
        "mode": "markdown"
      }
    },
    {
      "id": 10,
      "title": "Top $topk ‚Äî Pod CPU Request",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 42 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_cpu_cores{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}} ({{exported_namespace}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 11,
      "title": "Top $topk ‚Äî Pod Memory Request",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 42 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_memory_gib{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}} ({{exported_namespace}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 12,
      "title": "Top $topk ‚Äî Pod Restart Count",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 50 },
      "targets": [
        {
          "expr": "topk($topk, kubepocket_pod_restarts_total{exported_namespace=~\"$namespace\"})",
          "legendFormat": "{{exported_pod}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 13,
      "title": "Pod Status",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 50 },
      "targets": [
        {
          "expr": "kubepocket_pod_running{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_pod}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "text": "NOT RUNNING" },
                "1": { "text": "RUNNING" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    },
    {
      "id": 400,
      "title": "üìä √ñZET",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 58 },
      "options": { "content": "## √ñzet", "mode": "markdown" }
    },
    {
      "id": 20,
      "title": "Total CPU by Namespace",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 60 },
      "targets": [
        {
          "expr": "kubepocket_namespace_cpu_cores{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 21,
      "title": "Total Memory by Namespace",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 60 },
      "targets": [
        {
          "expr": "kubepocket_namespace_memory_gib{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "instant": true,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 22,
      "title": "KubePocket Exporter Status",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 68 },
      "targets": [
        {
          "expr": "max(kubepocket_up)",
          "legendFormat": "KubePocket",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    }
  ]
}
