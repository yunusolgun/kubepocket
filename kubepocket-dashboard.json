{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus"
    }
  ],
  "__requires": [
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "title": "KubePocket",
  "uid": "kubepocket-main",
  "schemaVersion": 36,
  "version": 7,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "namespace",
        "label": "Namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(kubepocket_namespace_cpu_cores, exported_namespace)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "refresh": 2,
        "sort": 1
      },
      {
        "name": "topk",
        "label": "Top N Pod",
        "type": "custom",
        "query": "5,10,20,50",
        "current": { "selected": true, "text": "10", "value": "10" }
      }
    ]
  },
  "panels": [
    {
      "id": 100,
      "title": "üåê NAMESPACE BAZLI",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 0 },
      "options": { "content": "## Namespace Metrics", "mode": "markdown" }
    },
    {
      "id": 1,
      "title": "Namespace CPU (cores)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 2 },
      "targets": [
        {
          "expr": "kubepocket_namespace_cpu_cores{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 2,
      "title": "Namespace Memory (GiB)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 2 },
      "targets": [
        {
          "expr": "kubepocket_namespace_memory_gib{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 3,
      "title": "Namespace Restarts",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "kubepocket_namespace_restarts_total{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 4,
      "title": "Namespace Anomaly Score",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "targets": [
        {
          "expr": "kubepocket_anomaly_score{exported_namespace=~\"$namespace\"}",
          "legendFormat": "{{exported_namespace}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      }
    },

    {
      "id": 500,
      "title": "üí∞ RELATIVE COST",
      "type": "text",
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 18 },
      "options": {
        "content": "## Relative Cost ‚Äî Namespace Share of Cluster Resources",
        "mode": "markdown"
      }
    },
    {
      "id": 501,
      "title": "Namespace Cost Share (%)",
      "type": "piechart",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 10, "w": 8, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "kubepocket_namespace_cost_pct{exported_namespace=~\"$namespace\"}",
